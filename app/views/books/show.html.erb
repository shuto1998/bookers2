<%= flash[:notice] %>

<h1>book#show</h1>
<div class="container">
  <div class="row">
    <div class-"col-lg-4">
<%= render 'users/user', user: @user %>
  <% if @books.errors.any? %>
  <%= @books.errors.count %>件のエラーが発生しました
  <ul>
    <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1>New Book</h1>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>
<div>
<%=f.submit'Create Book',class: "btn btn-success" %>
 <% end %>
</div>
  </div>

<div class="col-lg-8" style="background-color: orange;">
<h1>Books detail</h1>

<table class="table table-striped">

<tbody>
  <tr>
  <td>
    <%= link_to user_path(@books.user_id) do %>
    <%= image_tag @books.user.get_profile_image(40,40) %>
    <br><%= @books.user.name %>
    <% end %>
  </td>
  
  <td><%= link_to @books.title %></td>
  <td><%= @books.body %></td>
   <% if @books.user == current_user %>
  <td><%= link_to "edit", edit_book_path(@books.id) %></td>
 
  <td><%= link_to "destroy",book_path(@books.id),method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  <% end %>
  </tr>
</tbody>

</table>

</div>
  </div>
</div>
</main>