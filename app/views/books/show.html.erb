<%= flash[:notice] %>

 <% if @books.errors.any? %>
  <%= @books.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
<%= render 'users/user', user: @user %>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>
<div>
<%=f.submit'Create Book',class: "btn btn-success" %>
 <% end %>
</div>
  </div>
<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>

<table class="table table-striped">

<tbody>
  <tr>
  <td>
    <%= link_to user_path(@books.user_id) do %>
    <%= image_tag @books.user.get_profile_image(40,40) %>
    <br><%= @books.user.name %>
    <% end %>
  </td>

  <td><%= link_to @books.title %></td>
  <td><%= @books.body %></td>
   <% if @books.user == current_user %>
  <td><%= link_to "Edit", edit_book_path(@books.id),class: "btn btn-success" %></td>

  <td><%= link_to "Destroy",book_path(@books.id),method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
  <% end %>
  </tr>
</tbody>

</table>

</div>
  </div>
</div>
</main>