<h1>Uer index</h1>
<div class="container">
    <div class="row">
      <div class-"col-lg-4">
        <%= render 'users/user', user: @user %>

                  <h1>New Book</h1>
                  <%= form_with model: @Book do |f| %>
                  <h4>Title</h4>
                  <%= f.text_field :title %>

                  <h4>Opinion</h4>
                  <%= f.text_area :body %>

                  <div>
                  <%=f.submit'Create Book',class: "btn btn-success" %>
                  <% end %>
                  </div>
                  </div>

          <div class="col-lg-8" style="background-color: orange;">
              <h1>Books</h1>

                  <table class="table table-striped">
                    <tr>
                      <th></th>
                      <th>Title</th>
                      <th>Opinion</th>
                    </tr>

                    <tbody>
                      <% @books.each do |book| %>
                      <tr>
                        <td><%= image_tag book.user.get_profile_image(40,40) %></td>
                        <td><%= book.title %></td>
                        <td><%= book.body %></td>
                        <td><%=link_to "show",user_path(book.user) %></td>
                      </tr>
                      <% end %>
                    </tbody>
                </table>
          </div>
      </div>
  </div>