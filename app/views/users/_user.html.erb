<h2>User info</h2>
  <%= image_tag user.get_profile_image(63,63) %>
    <table class="table table-striped">
      <thead>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
       </thead>
     </table>
    <%= link_to edit_user_path(user.id),class: "btn btn-secondary" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>